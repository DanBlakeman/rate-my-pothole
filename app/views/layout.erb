<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<% if @current_user %>
  <div>Welcome, <%= @current_user %>!</div>
<% end %>

<%= yield %>

</body>
</html>


